<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PushY.Views.RegisterPage">
    <StackLayout 
        Margin="10,20,10,70"
        Padding="10"
        VerticalOptions="Center">
        <Entry
            Text="{Binding Name}"
            Keyboard="Text"
            Placeholder="name"/>
        <Entry
            Text="{Binding Pwd}"
            IsPassword="True"
            Placeholder="password"/>
        <Entry
            Text="{Binding NickName}"
            Keyboard="Text"
            Placeholder="nickname"/>
        <Label
            x:Name="errorLabel"
            TextColor="red"
            Text=""
            FontAttributes="Bold"/>
        <Button
            Text="Register"
            Margin="100,25"
            Command="{Binding RegisterCmd}"/>
        <Button
            Text="Login"
            Margin="100,25"
            Command="{Binding LoginCmd}"/>
    </StackLayout>
</ContentPage>